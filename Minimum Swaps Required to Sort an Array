#include<bits/stdc++.h>
using namespace std;

void minSwaps(vector<int>arr){
    vector<int>temp(arr.begin(),arr.end());
    sort(temp.begin(),temp.end());
    unordered_map<int,int>mp;
    for(int i=0;i<arr.size();i++){
        mp[arr[i]]++;
    }
    int swapCount=0;
    for(int i=0;i<arr.size();i++){
        if(temp[i]!=arr[i]){
            int index=mp[arr[i]];
            swap(arr[i],arr[index]);
            mp[arr[i]]=i;
            mp[arr[index]]=index;
            swapCount++;
        }
    }
    cout<<swapCount<<endl;
    
}
int main(){
    vector<int>arr={4,3,1,2};
   minSwaps(arr);
    return 0;
}
