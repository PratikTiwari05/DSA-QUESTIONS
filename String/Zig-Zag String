#include <bits/stdc++.h> 
#include<iostream>
string zigZagString(string str, int n, int m) {
    if(m<=1){
        return str;
    }
    vector<string>ans(m,"");//declared m rows
    int row=0;
    int dir=1;
    for(int i=0;i<str.length();i++){
        char ch=str[i];
        ans[row].push_back(ch);
        if(row==0){
            dir=1;
        }
        else if(row==m-1){
            dir=-1;
        }
        row+=dir;
    }
    string finalAns="";
   for(int i=0;i<ans.size();i++){
       finalAns+=ans[i];
   }
    return finalAns;
}
